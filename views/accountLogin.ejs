<body>
<section  id="login-account">

    <div class="container" id="forms-container">
      
        <input type="checkbox" id="flip">
        <div class="cover">
            <div class="front">
                <img src="/images/accountLogin.jpg" alt="">
                <div class="text">
                <span class="text-1">Learn Anytime<br> Anywhere</span>
                <span class="text-2">Let's get connected</span>
                </div>
            </div>
            <div class="back">
                <img class="backImg" src="/images/accountLogin.jpg" alt="">
                <div class="text">
                <span class="text-1">Complete miles of journey <br> with one step</span>
                <span class="text-2">Let's get started</span>
                </div>
            </div>
        </div>

        <div class="forms">
            <div class="form-content">
                <!-- sign in -->
                <div class="login-form">
                    <div class="title">Login</div>
                    <form action="/auth/login" method="POST">
                        <div class="input-boxes">
                            <div class="input-box">
                            <i class="fas fa-envelope"></i>
                            <input type="text" name="email" placeholder="Enter your email" required>
                            </div>
                            <div class="input-box">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="password" placeholder="Enter your password" required>
                            </div>
                            <div class="text"><a href="#">Forgot password?</a></div>
                            <div class="button input-box">
                            <input type="submit" value="Sumbit">
                            </div>
                            <div class="text sign-up-text">Don't have an account? <label for="flip">Sigup now</label></div>
                        </div>
                    </form>
                    <span class="login-method">or Login Using </span>
                    <!-- logging in using gmail -->
                     <a href="/auth/google" id="google-btn">
                        <i class="fab fa-google-plus-g"></i> Login With Google
                     </a>

                </div>

                <!-- sign up -->
                <div class="signup-form">
                    <div class="title">Signup</div>
                    <form action="/auth/signup" method="POST">
                        <div class="input-boxes">
                        <div class="input-box">
                            <i class="fas fa-user"></i>
                            <input type="text" name="userName" placeholder="Enter your name" required>
                        </div>
                        <div class="input-box">
                            <i class="fas fa-envelope"></i>
                            <input type="email" name="email" placeholder="Enter your email" required>
                        </div>
                        <div class="input-box">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="password" placeholder="Enter your password" required>
                        </div>
                        <div class="button input-box">
                            <input type="submit" value="Sumbit">
                        </div>
                        <div class="text sign-up-text">Already have an account? <label for="flip">Login now</label></div>
                        </div>
                    </form>
                      <span class="login-method">or Login Using </span>
                     <!-- logging in using gmail -->
                     <a href="/auth/google" id="google-btn">
                        <i class="fab fa-google-plus-g"></i> Login With Google
                     </a>
                </div>

            </div>
        </div>
    </div>
   
</section>


</body>