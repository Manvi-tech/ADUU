
<!-- 
    class form contains:-
        class name
        subject
        room
    after filling form of create class:-
        options: classWork, people(teachers, students), grades
        invite link
        room code 
        (user can enter room through class name and room code or only invite link)
        creator of class can post assignments in class
 -->
 

<div id="create-class" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
           
            <div class="modal-title">
                <h2>Create Class</h2>
            </div>
           
            <div class="modal-body class-form">
                <form action="/class/createRoom" method="POST" class="class-info">   
                    <div class="class-detail">
                        <p>Class Name *</p>
                        <input type="text" name="className" required>
                    </div>
                    <div class="class-detail">
                        <p>Section</p>
                        <input type="text" name="section">
                    </div>
                    <div class="class-detail">
                        <p>Subject</p>
                        <input type="text" name="subject">
                    </div>
                    <div class="class-detail">
                        <p>ClassId *</p>
                        <input type="text" name="classId" required>
                    </div>
                    <div>
                        <input type="submit" value="create">
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>